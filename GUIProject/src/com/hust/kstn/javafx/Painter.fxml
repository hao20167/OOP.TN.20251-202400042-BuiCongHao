<SplitPane dividerPositions="0.23076923076923078" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hust.kstn.javafx.PainterController">

  <items>
    <AnchorPane prefHeight="494.0" prefWidth="168.0">
      <children>
        <Button layoutX="5.0" layoutY="84.0" mnemonicParsing="false" onAction="#clearButtonPressed" prefHeight="25.0" prefWidth="75.0" text="Clear" />
            <TitledPane layoutX="1.0" prefHeight="77.0" prefWidth="84.0" text="Tools">
               <content>
              <VBox prefHeight="174.0" prefWidth="0.0">
                     <children>
                        <RadioButton mnemonicParsing="false" onAction="#penButtonPressed" prefHeight="57.0" prefWidth="55.0" selected="true" text="Pen">
                           <toggleGroup>
                              <ToggleGroup fx:id="identical" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton mnemonicParsing="false" onAction="#eraserButtonPressed" text="Eraser" toggleGroup="$identical" />
                     </children>
                  </VBox>
               </content>
            </TitledPane>
      </children>
    </AnchorPane>

    <AnchorPane prefHeight="160.0" prefWidth="100.0">
      <children>
        <Pane fx:id="drawingAreaPane" layoutX="-22.0" layoutY="14.0" onMouseClicked="#drawingAreaMouseClicked" onMouseDragged="#drawingAreaMouseDragged" prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: white;">
          <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
          </padding>
        </Pane>
      </children>
    </AnchorPane>
  </items>

